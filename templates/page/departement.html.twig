{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Gestion et relation Client</h1>
        <hr class="my-4">
    </div>
    <div class="container">
        <div class="col-md-6">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">nombre d'employer</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for d in departements %}
                    <tr>
                        <td>{{d.nom}}</td>
                        <td>{{d.nombreEmployer}}</td>
                        <td>
                            <a href="" class="fa fa-eye btn btn-sm" title="show details "> Voir</a>
                            <a href="{{ path('departement_edit', {'id': d.id })}}" class="fa fa-edit btn btn-sm" title="Editer le client "> Editer</a>
                            <form onsubmit="return confirm('Voulez-vous supprimer {{d.nom  ~ '  ' ~ d.nombreEmployer }}  ? ')" method="post" action="{{ path('departement_delete', {'id': d.id } )}}" style="display:inline-block;">
                                <input  type="hidden" method name="_method" value="DELETE" />
                                <input  type="hidden" name="_token" value="{{ csrf_token('delete' ~ d.id )}}" />
                                <button type="submit" class="fa fa-remove btn btn-sm btn-danger"> Supprimer<button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}